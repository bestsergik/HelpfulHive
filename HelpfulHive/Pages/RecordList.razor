    private async Task ReloadRecords()
    {
        if (LoadFavorites)
        {
            await LoadFavoriteRecords();
        }
        else if (!string.IsNullOrWhiteSpace(SelectedSubTabId))
        {
            await LoadRecordsFromSubTab();
        }
        StateHasChanged(); // Update the UI
    }
